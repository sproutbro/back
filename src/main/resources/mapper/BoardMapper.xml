<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jw.back.repository.BoardRepository">
    <insert id="save" parameterType="Board">
        INSERT INTO board (author, title, content)
        VALUES (#{author}, #{title}, #{content})
    </insert>
    <delete id="delete" parameterType="Long">
        DELETE
        FROM board
        WHERE id = #{id}
    </delete>
    <select id="findById" resultType="Board" parameterType="Long">
        SELECT * FROM board WHERE id = #{id}
    </select>
    <select id="findAll" resultType="Board">
        SELECT * FROM board
    </select>
    <select id="count" resultType="Integer">
        SELECT count(id) count FROM board
    </select>
</mapper>