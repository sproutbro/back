<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jw.back.repository.UserRepository">
    <select id="getUserByEmail" resultType="User" parameterType="String">
        SELECT * FROM User WHERE email = #{email}
    </select>
    <select id="getUserByUsername" resultType="User" parameterType="String">
        SELECT * FROM User WHERE name = #{name}
    </select>
    <insert id="insertUser" parameterType="User">
        INSERT INTO User (name, email, pw) VALUES (#{name},  #{email}, #{pw});
    </insert>
</mapper>